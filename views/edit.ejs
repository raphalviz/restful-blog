<% include ./partials/header %>
<div class="main container">
    <div class="card-panel">
        <div>Edit <%= blog.title %></div>
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="input-field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="input-field">
                <label>Image URL</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="input-field">
                <label>Body</label>
                <textarea class="materialize-textarea" name="blog[body]"><%= blog.body %></textarea>
            </div>
            <button class="btn waves-effect waves-light" type="submit">Submit</button>
        </form>
    </div>
</div>
<% include ./partials/footer %>