<% include ./partials/header %>

<div class="container">
    <h1>Index Page</h1>
</div>
    <% blogs.forEach(function(blog) { %>
        <div class="container content">
            <h2><%=blog.title%></h2>
            <img src="<%=blog.image%>">
            <span><%= blog.created.toDateString() %></span>
            <p><%= blog.body.substring(0, 100) %>...</p>
            <a href="/blogs/<%= blog._id %>">Read More</a>
        </div>
    <% }) %>
<% include ./partials/footer %>